<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.segment.android.sample.MainActivity">

  <Button
      android:id="@+id/action_track_a"
      android:text="@string/track_button_a"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/action_track_b"
      android:text="@string/track_button_b"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/action_track_c"
      android:text="@string/track_button_c"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

</LinearLayout>
